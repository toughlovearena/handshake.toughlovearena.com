  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "prestart": "npm-run-all lint build",
    "start": "node dist/index.js",
    "watch": "nodemon",
    "bg": "forever start dist/index.js",
    "kill": "forever stop dist/index.js",
    "update": "git checkout prod && git pull && npm i",
    "setup": "npm-run-all update build bg",
    "test": "jest --detectOpenHandles",
    "ci-test": "jest --detectOpenHandles --runInBand"
  },
  "dependencies": {
    "@toughlovearena/updater": "^1.1.3",
